<div class="container">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <%= form_for(@customer) do |f| %>
      <div class="form-group">
        <% if @customer.errors.any? %>
          <div id="error_explanation" class="alert alert-danger" role="alert">
            <h3><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h3>

            <ul>
              <% @customer.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field form-group<%= " field_with_errors" if @customer.errors[:email].any? %>">
          <%= f.label :email %>
          <br>
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="field form-group<%= " field_with_errors" if @customer.errors[:first_name].any? %>">
          <%= f.label :first_name %>
          <br>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
        <div class="field form-group<%= " field_with_errors" if @customer.errors[:last_name].any? %>">
          <%= f.label :last_name %>
          <br>
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
        <div class="field form-group<%= " field_with_errors" if @customer.errors[:password].any? %>">
          <%= f.label :password %>
          <br>
          <%= f.text_field :password, class: "form-control", type: "password" %>
        </div>
        <div class="field form-group<%= " field_with_errors" if @customer.errors[:password_confirmation].any? %>">
          <%= f.label :password_confirmation %>
          <br>
          <%= f.text_field :password_confirmation, class: "form-control", type: "password" %>
        </div>
        <div class="actions">
          <%= f.submit "Register", class: "btn btn-default" %>
        </div>
      </div>
    <% end %>
    <br>
    <p>Have an account? <%= render_sign_in_link %></p>
  </div>
  <div class="col-md-3"></div>
</div>